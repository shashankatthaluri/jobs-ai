# Jobs AI Backend - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================
# PRIMARY LLM: Groq (Fast, high limits)
# ==============================================
GROQ_API_KEY=gsk_your_groq_api_key
LLM_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# ==============================================
# FALLBACK LLM: OpenRouter (Backup when Groq hits limits)
# ==============================================
# Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# ==============================================
# SUPABASE (Auth + Database)
# ==============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ==============================================
# SEARCH: Tavily
# ==============================================
TAVILY_API_KEY=tvly-your_tavily_api_key

# ==============================================
# PAYMENTS: Polar.sh
# ==============================================
POLAR_API_KEY=your_polar_api_key
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# ==============================================
# APPLICATION
# ==============================================
DEBUG=false
CORS_ORIGINS=https://jobstudio.petgharcare.com,https://jobs-ai-sepia.vercel.app
